{
	"name": "@svelteaction/monorepo",
	"version": "3.0.6",
	"private": true,
	"packageManager": "pnpm@7.5.0",
	"description": "Collection of essential Svelte Utilities",
	"author": "Mohamed Nesredin<https://github.com/Mohamed-Kaizen>",
	"license": "MIT",
	"scripts": {
		"build": "pnpm run update && esno scripts/build.ts",
		"build:rollup": "cross-env NODE_OPTIONS=\"--max-old-space-size=6144\" rollup -c",
		"build:types": "tsc --emitDeclarationOnly",
		"clean": "rimraf dist types packages/*/dist",
		"coverage": "vitest run --coverage",
		"docs:build": "cd docs && pnpm run build && vercel .",
		"lint": "eslint .",
		"lint:fix": "pnpm run lint --fix",
		"postinstall": "cd docs && pnpm install --ignore-workspace",
		"publish:ci": "esno scripts/publish.ts",
		"release": "esno scripts/release.ts && git push --follow-tags",
		"size": "esno scripts/export-size.ts",
		"test": "vitest run",
		"test:watch": "vitest --watch",
		"typecheck": "tsc --noEmit",
		"update": "esno scripts/meta/update.ts && esno scripts/update.ts",
		"watch": "esno scripts/build.ts --watch"
	},
	"devDependencies": {
		"@rollup/plugin-json": "^4.1.0",
		"@rollup/plugin-replace": "^4.0.0",
		"@types/fs-extra": "^9.0.13",
		"@types/js-yaml": "^4.0.5",
		"@types/md5": "^2.3.2",
		"@types/node": "^18.0.6",
		"@types/sharp": "^0.30.4",
		"@typescript-eslint/eslint-plugin": "^5.27.0",
		"@typescript-eslint/parser": "^5.27.0",
		"@vitest/ui": "^0.18.1",
		"@svelteaction/core": "workspace:*",
		"@svelteaction/integrations": "workspace:*",
		"@svelteaction/math": "workspace:*",
		"@svelteaction/shared": "workspace:*",
		"bumpp": "^8.2.1",
		"c8": "^7.11.3",
		"consola": "^2.15.3",
		"cross-env": "^7.0.3",
		"esbuild-register": "^3.3.3",
		"eslint": "^8.19.0",
		"eslint-config-prettier": "^8.5.0",
		"esno": "^0.16.3",
		"export-size": "^0.5.2",
		"fast-glob": "^3.2.11",
		"fs-extra": "^10.1.0",
		"gray-matter": "^4.0.3",
		"js-yaml": "^4.1.0",
		"jsdom": "^20.0.0",
		"lint-staged": "^13.0.3",
		"markdown-table": "^3.0.2",
		"md5": "^2.3.0",
		"node-fetch": "^3.2.9",
		"ohmyfetch": "^0.4.18",
		"pnpm": "^7.5.0",
		"prettier": "^2.7.1",
		"remove-markdown": "^0.5.0",
		"rimraf": "^3.0.2",
		"rollup": "^2.77.0",
		"rollup-plugin-dts": "^4.2.2",
		"rollup-plugin-esbuild": "^4.9.1",
		"sharp": "^0.30.7",
		"simple-git": "^3.10.0",
		"simple-git-hooks": "^2.8.0",
		"svelte": "^3.49.0",
		"typescript": "4.7.4",
		"vite": "^3.0.2",
		"vitest": "^0.18.1"
	},
	"simple-git-hooks": {
		"pre-commit": "npx lint-staged"
	},
	"lint-staged": {
		"*.{js,ts,tsx}": [
			"eslint --fix"
		]
	}
}
